  <ItemGroup>
    <PackageReference Include="Particular.CodeRules" Version="0.2.0" PrivateAssets="All" />
    <PackageReference Include="Particular.Packaging" Version="0.1.0" PrivateAssets="All" />
    <PackageReference Include="Fody" Version="3.0.4" PrivateAssets="All" />
    <PackageReference Include="Janitor.Fody" Version="1.6.1" PrivateAssets="All" />
    <PackageReference Include="Obsolete.Fody" Version="4.4.0" PrivateAssets="All" />
    <PackageReference Include="NServiceBus" Version="[7.0.0, 8.0.0)" />
    <PackageReference Include="NHibernate" version="[5.1.0, 6.0.0)" />
    <PackageReference Include="Iesi.Collections" version="[4.0.4, 5.0.0)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SourceLink.Create.GitHub" Version="2.6.0" PrivateAssets="All" />
    <DotNetCliToolReference Include="dotnet-sourcelink-git" Version="2.5.0" />
  </ItemGroup>

</Project>
